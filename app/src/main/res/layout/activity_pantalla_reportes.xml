<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.shopping.activity.PantallaReportes"
    android:background="@drawable/pantalla_reportar"
    android:id="@+id/layoutpantallita">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportar"
            android:id="@+id/btnReportar"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="103dp"
            android:layout_marginEnd="103dp"
            android:layout_marginLeft="157dp"
            android:layout_marginStart="157dp"
            android:layout_marginTop="58dp"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asignados"
            android:id="@+id/btnAsignados"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:textColor="#75000000"
            android:layout_alignTop="@+id/btnReportar"
            android:onClick="verPantallaAsignadosClick" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout5"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/lblReportar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_weight="0.07">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locación"
                android:id="@+id/lblLocacion"
                android:layout_below="@+id/lblReportar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="23dp"
                android:textColor="#ff000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/spLocacion" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:weightSum="1"
            android:layout_weight="0.07">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indicador"
                android:id="@+id/lblIndicador"
                android:layout_below="@+id/lblLocacion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="23dp"
                android:textColor="#ff000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/spIndicador"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout3"
            android:layout_weight="0.07">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluación"
                android:id="@+id/lblEvaluacion"
                android:layout_below="@+id/lblIndicador"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="23dp"
                android:textColor="#ff000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/spEvaluacion"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjuntar"
                android:id="@+id/lblAdjuntar"
                android:textSize="23dp"
                android:textColor="#ff000000"
                android:layout_below="@+id/lblEvaluacion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                android:id="@+id/btnFoto"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:id="@+id/btnVideo"
                android:textSize="20dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.42">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones"
                android:id="@+id/lblObservaciones"
                android:textColor="#ff000000"
                android:textSize="23dp"
                android:layout_below="@+id/lblAdjuntar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtObservaciones"
                android:textSize="23dp"
                android:autoText="false"
                android:background="#fffffbfd" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/btnEnviar"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:onClick="btnEnviarClick" />

    </LinearLayout>


</RelativeLayout>
