<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PantallaInicio"
    android:background="@drawable/PantallaInicio">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/lblUsuario"
        android:textSize="35dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsuario"
        android:layout_below="@+id/lblUsuario"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:id="@+id/lblContrasena"
        android:layout_below="@+id/txtUsuario"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtContrasena"
        android:layout_below="@+id/lblContrasena"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="No cerrar sesión"
        android:id="@+id/chkSesion"
        android:textSize="25dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/txtContrasena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:id="@+id/btnConectar"
        android:layout_below="@+id/chkSesion"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />
</RelativeLayout>
