<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.shopping.PantallaReportes"
    android:background="@drawable/PantallaReportar"
    android:id="@+id/">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar"
        android:id="@+id/lblReportar"
        android:layout_marginRight="104dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="71dp"
        android:enabled="false"
        android:textSize="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/lblReportar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locación"
            android:id="@+id/lblLocacion"
            android:layout_below="@+id/lblReportar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:textSize="23dp"
            android:textColor="#ff000000"
            android:layout_gravity="bottom" />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:id="@+id/expandableListView"
            android:layout_gravity="top" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indicador"
            android:id="@+id/lblIndicador"
            android:layout_below="@+id/lblLocacion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="23dp"
            android:textColor="#ff000000" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/expandableListView2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluación"
            android:id="@+id/lblEvaluacion"
            android:layout_below="@+id/lblIndicador"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="23dp"
            android:textColor="#ff000000" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/expandableListView3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjuntar"
            android:id="@+id/lblAdjuntar"
            android:textSize="23dp"
            android:textColor="#ff000000"
            android:layout_below="@+id/lblEvaluacion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto"
            android:id="@+id/btnFoto"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:id="@+id/btnVideo"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:id="@+id/lblObservaciones"
            android:textColor="#ff000000"
            android:textSize="23dp"
            android:layout_below="@+id/lblAdjuntar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtObservaciones"
            android:textSize="23dp" />
    </LinearLayout>

</RelativeLayout>
